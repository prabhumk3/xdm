{
    "$id": "context/profile-other-work-details.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Profile Other Work Details",
    "type": "object",
    "meta:extensible": true,
    "meta:abstract": true,
    "description": "This mixin is used to capture information regarding additional/other work-related details of the individual such as work address, work email, work phone number, and organizations to which the profile belongs.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "otherAddress": {
            "title": "Other Address",
            "$ref": "../common/address.schema.json",
            "description": "Other/Alternate postal address of the person.",
            "meta:xdmField": "xdm:otherAddress",
            "tagNumber": 1
        },
        "otherPhone": {
            "title": "Other Phone",
            "$ref": "../context/phonenumber.schema.json",
            "description": "Other/Alternate phone number of the person.",
            "meta:xdmField": "xdm:otherPhone",
            "tagNumber": 2
        },
        "extendedWorkDetails": {
            "type": "object",
            "title": "Some Additional Person Work Details",
            "meta:xdmType": "object",
            "properties": {
                "assistantDetails": {
                    "type": "object",
                    "title": "Assitant Details",
                    "meta:xdmType": "object",
                    "properties": {
                        "name": {
                            "title": "Assistant Name",
                            "$ref": "../context/person-name.schema.json",
                            "description": "Person's assistant full name.",
                            "meta:xdmField": "xdm:name",
                            "tagNumber": 1
                        },
                        "phone": {
                            "title": "Assistant Phone",
                            "$ref": "../context/phonenumber.schema.json",
                            "description": "Person's assistant phone number.",
                            "meta:xdmField": "xdm:phone",
                            "tagNumber": 2
                        }
                    },
                    "meta:xdmField": "xdm:assistantDetails",
                    "tagNumber": 1
                },
                "reportsToID": {
                    "title": "Reports To Id",
                    "description": "Identifier of the Reporting Manager.",
                    "type": "string",
                    "meta:xdmType": "string",
                    "meta:xdmField": "xdm:reportsToID",
                    "tagNumber": 2
                },
                "departments": {
                    "title": "Department Name",
                    "description": "Department name where the person works.",
                    "type": "array",
                    "meta:xdmType": "array",
                    "items": {
                        "type": "string",
                        "meta:xdmType": "string",
                        "tagNumber": 1
                    },
                    "meta:xdmField": "xdm:departments",
                    "tagNumber": 3
                },
                "jobTitle": {
                    "title": "Job Title",
                    "description": "Job title of the person.",
                    "type": "string",
                    "meta:xdmType": "string",
                    "meta:xdmField": "xdm:jobTitle",
                    "tagNumber": 4
                },
                "photoUrl": {
                    "title": "Photo Url",
                    "description": "Photo url of the person.",
                    "type": "string",
                    "format": "uri",
                    "meta:xdmType": "string",
                    "meta:xdmField": "xdm:photoUrl",
                    "tagNumber": 5
                }
            },
            "meta:xdmField": "xdm:extendedWorkDetails",
            "tagNumber": 3
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/context/profile-other-work-details",
    "meta:altId": "_xdm.context.profile-other-work-details"
}