{
    "$id": "datatypes/currency.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Currency",
    "type": "object",
    "meta:extensible": true,
    "description": "This datatype is used where ever you want to store any kind of amount in combination of currency code.",
    "meta:status": "experimental",
    "meta:xdmType": "object",
    "properties": {
        "amount": {
            "title": "Amount",
            "description": "Amount represented by the currencyCode",
            "type": "number",
            "meta:xdmType": "number",
            "meta:xdmField": "xdm:amount",
            "tagNumber": 1
        },
        "currencyCode": {
            "title": "Currency Code",
            "type": "string",
            "examples": [
                "USD",
                "EUR"
            ],
            "pattern": "^[A-Z]{3}$",
            "description": "The ISO 4217 currency code.",
            "meta:xdmType": "string",
            "meta:xdmField": "xdm:currencyCode",
            "tagNumber": 2
        },
        "conversionDate": {
            "title": "Conversion Date",
            "description": "Date when currency conversion was made.",
            "type": "string",
            "format": "date-time",
            "meta:xdmType": "date-time",
            "meta:xdmField": "xdm:conversionDate",
            "tagNumber": 3
        }
    },
    "meta:xdmId": "https://ns.adobe.com/xdm/datatypes/currency",
    "meta:altId": "_xdm.datatypes.currency"
}